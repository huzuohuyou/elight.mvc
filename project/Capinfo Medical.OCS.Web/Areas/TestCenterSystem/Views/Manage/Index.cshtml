    function btn_export() {
        $.formSubmit({
            url: "/TestCenterSystem/Manage/ExportData?primaryKey=" + primaryKey,
            close: false,
            showMsg: false,
            success: function (data) {
                if (data.data == null) {
                    if (data.overflow !== "")
                        $.layerMsg(data.overflow, 2);
                    else
                        $.layerMsg("数据项未执行或已清空，无法导出！", 2);
                }
                else if (data.data.length == 0)
                    $.layerMsg("未找到结果数据，无法导出！", 2);
                else
                    //$.JsonToCSV(data,"数据项_" + data.data[0].SITEM_NAME + "_执行结果表.csv");
                    $.JSONToExcelConvertor(data.data, "数据项_" + data.data[0].SITEM_NAME + "_执行结果表", data.title);
            }
