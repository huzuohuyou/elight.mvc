<script>
    var paging;
    var primaryKey;
    var table;
    var currentPage;
    layui.use(['table', 'form', 'layer', 'element', 'laydate'], function () {
        var form = layui.form;
        var laydate = layui.laydate;
        var element = layui.element;
        table = layui.table;
        primaryKey = $.getQueryString("primaryKey");
        initData(null);
        table.on('tool(gridResult)', function (obj) {
            var data = obj.data;
            if (obj.event === 'look') {
                look(data);
            }
        });
        $(function () {
            var chat = $.connection.processHub;
            chat.client.addNewMessageToPage = function (name, percent, title, note) {
                var dataitem_client_key = $.cookie("sdataitem_client_key");
                console.log('=====name' + name + '=====sdataitem_client_key:' + dataitem_client_key + '-' + percent);
                if (name == dataitem_client_key) {
                    if (note != "")
                        $("#sdataitem_note")[0].value = note + '\r\n' + $("#sdataitem_note")[0].value;
                    element.progress('sdataitem_progres', percent + '%');
                    if (percent === "100") {
                        setExecuteSta(2);
                        $.formSubmit({
                            url: "/TestCenterSystem/Manage/RereshExeResult?primaryKey=" + primaryKey,
                            showMsg: false,
                            close: false,
                            success: function (data) {
                                if ((data.state === 1)) {
                                    $("#exeUser").get(0).textContent = "最后执行/清库者：" + data.data.exeUser;
                                    $("#exeTime").get(0).textContent = "时间：" + data.data.exeTime;
                                }
                            }
                        });
                        //刷新父窗体
                        refrenshParent();
                    }
                }
            };
            $.connection.hub.start().done(function () {
            });
        });
        setExecuteSta(@ViewBag.ExecuteState);
        form.on('submit(testdll)', function (data) {
            var flag = Verification($("input[name='Url']").val());
            if (flag) {
                setBtnState($("#TestBtn"), "测试中", true);
                $.formSubmit({
                    url: "/TestCenterSystem/Manage/TestDllEvent?primaryKey=" + primaryKey,
                    data: { "startTime": data.field.test_startTime, "endTime": data.field.test_endTime, "patientId": data.field.PatientId, "url": data.field.Url, "timeInterval": data.field.time_interval },//
                    close: false,
                    async: true,
                    cache: true,
                    success: function (data) {
                        setBtnState($("#TestBtn"), "测试", false);
                        initData(data.data);
                        if ((data.state === 1)) {
                            $("#realUrl")[0].value = $("#Url")[0].value;
                        }
                    }
                });
            }
        });
        form.on('submit(execute)', function (data) {
            var flag = Verification($("input[name='realUrl']").val());
            var clientKey = $.cookie("sdataitem_client_key");
            if (flag && ($("#Execute").get(0).value === "执行" || $("#Execute").get(0).value === "已执行")) {
                setBtnState($("#Execute"), "取消", false);
                $.formSubmit({
                    url: "/TestCenterSystem/Manage/ExecuteDllEvent?primaryKey=" + primaryKey,
                    data: { "startTime": data.field.exe_startTime, "endTime": data.field.exe_endTime, "patientId": data.field.exe_PatientId, "url": data.field.realUrl, "clientKey": clientKey },//
                    close: false,
                    async: true,
                    success: function (data) {
                        if ((data.state === 1)) {
                        } else {
                            setBtnState($("#Execute"), "执行", false);
                        }
                    }
                });
            } else if ($("#Execute").get(0).value === "取消") {
                setBtnState($("#Execute"), "取消中", true);
                $.formSubmit({
                    url: "/TestCenterSystem/Manage/CancelExeDll?clientKey=" + clientKey,
                    close: false,
                    async: true,
                    success: function () {
                    }
                });
            }
        });
        form.on('submit(OK)', function (data) {
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index); //关闭窗口
        });
        var start = {
            elem: '#test_start_time',
            type: 'date',
            min: '1700-01-01',
            max: '2333-09-20',
            show: true,
            closeStop: '#test_start_time'
        };

        var end = {
            elem: '#test_end_time',
            type: 'date',
            min: '1700-01-01',
            max: '2333-09-20',
            show: true,
            closeStop: '#test_end_time'
        };

        lay('#test_start_time').on('click', function (e) {
            if ($('#test_end_time').val() != null && $('#test_end_time').val() != undefined && $('#test_end_time').val() != '') {
                start.max = $('#test_end_time').val();
            } else {
                start.max = "2333-09-20";
            }
            laydate.render(start);
        });
        lay('#test_end_time').on('click', function (e) {
            if ($('#test_start_time').val() != null && $('#test_start_time').val() != undefined && $('#test_start_time').val() != '') {
                end.min = $('#test_start_time').val();
            } else {
                end.min = "1700-01-01";
            }
            laydate.render(end);
        });
        var executeStart = {
            elem: '#exe_start_time',
            type: 'date',
            min: '1700-01-01',
            max: '2333-09-20',
            show: true,
            closeStop: '#exe_start_time'
        };
        var executeEnd = {
            elem: '#exe_end_time',
            type: 'date',
            min: '1700-01-01',
            max: '2333-09-20',
            show: true,
            closeStop: '#exe_end_time'
        };
        lay('#exe_start_time').on('click', function (e) {
            if ($('#exe_end_time').val() != null && $('#exe_end_time').val() != undefined && $('#exe_end_time').val() != '') {
                executeStart.max = $('#exe_end_time').val();
            } else {
                executeStart.max = "2333-09-20";
            }
            laydate.render(executeStart);
        });
        lay('#exe_end_time').on('click', function (e) {
            if ($('#exe_start_time').val() != null && $('#exe_start_time').val() != undefined && $('#exe_start_time').val() != '') {
                executeEnd.min = $('#exe_start_time').val();
            } else {
                executeEnd.min = "1700-01-01";
            }
            laydate.render(executeEnd);
        });
    });
    function initData(result) {
        table.render({
            id: 'testResult',
            elem: '#gridList1',
            data: result,
            page: true,
            even: true,
            limits: [5, 10, 15, 20, 25, 30],
            limit: 5,
            cols: [[
                { field: 'PATIENT_NO', title: 'PATIENTNO', width: 230, sort: true, align: 'center' },
                { field: 'IN_DEPT_NAME', title: '科室名称', width: 230, sort: true, align: 'center' },
                { field: 'DOCTOR_NAME', title: '医生名称', width: 230, sort: true, align: 'center' },
                { field: 'ACTUAL_VALUE', title: '数据项结果值', width: 230, align: 'center' }
            ]],
            done: function (res, curr, count) {
                currentPage = curr;
            }
