                width: "680px",
                height: "490px",
                content: "/TestCenterSystem/CommonItem/UpdateCommonItem?ItemCount=" + no + "&primaryKey=" + ids[0].value,
                yes: function (iBody) {
                    iBody.find('#btnSubmit').click();
                    initGrid();
                }
            });
        }
        else {
            $.layerOpen({
