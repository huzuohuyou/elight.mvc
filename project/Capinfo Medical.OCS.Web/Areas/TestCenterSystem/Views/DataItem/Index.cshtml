    function initGrid() {
        paging.init({
            url: '/TestCenterSystem/DataItem/Index',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                pageIndex: $(".layui-laypage-skip").val(),
                keyWord: $("select[name=ItemType]").get(0).value + ";" + $("#CodeOrName").val()  + ";" + $("select[name=IsExecute]").get(0).value + ";" + $("select[name=IsDepend]").get(0).value
            },
