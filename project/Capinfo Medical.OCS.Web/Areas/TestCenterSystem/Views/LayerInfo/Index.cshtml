<script type="text/javascript">
    var paging;
    var totalCount;
    var tab;
    var layer;
    var table;
    var currentPage;
    var field = 'ORDER_NO';
    var type = 'asc';
    var checkAll = false;
    var itemList;
    layui.use(['table', 'layer', 'form', 'laypage'], function () {//, 'tab'
        table = layui.table;
        layer = parent.layer || layui.layer;
        var form = layui.form;
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(btn_searchKeyWord);
        $('#keyWord').bindEnterEvent(btn_searchKeyWord);
        initGrid();
        table.on('tool(gridData)', function (obj) {
            console.log(obj.data);
            var data = obj.data;
            if (obj.event === 'detail') {
                btn_detail(data.SD_LAYER_ID);
            } else if (obj.event === 'del') {
                btn_delete(data.SD_LAYER_ID);
            } else if (obj.event === 'edit') {
                btn_edit(data.SD_LAYER_ID);
            } else if (obj.event === 'manage') {
                btn_configure(data.SD_LAYER_ID, data.SD_LAYER_CODE, data.SD_LAYER_NAME);
            }
        });
        table.on('sort(gridData)', function (obj) {
            console.log("limit:" + $("[href]").val())
            field = obj.field;
            type = obj.type;
        });

        //监听mark，mark变化时更新数据库中对应的值
        form.on("switch(switchMark)", function (data) {
            var ids = data.elem.parentElement.parentElement.firstElementChild.firstElementChild.value;
            $.formSubmit({
                url: "/TestCenterSystem/LayerInfo/Switch?primaryKey=" + data.elem.id + "&valueFlag=" + data.value,
                success: function () {
                    table.reload('grid', { curr: currentPage });
                }
            });
        });

        form.on('select(IS_EXECUTED_STATE)', function (data) {
            btn_searchKeyWord();
        });
    });

    //初始化表格
    function initGrid() {
        console.log($("[href]").val() == "")
        table.render({
            id: 'grid',
            elem: '#gridList',
            url: '/TestCenterSystem/LayerInfo/GetList',
            page: true,
            //even: true,
            height: 500,
            limits: [10, 20, 30, 40, 50, 1000],
            limit: $("[href]").val() == "" ? 10 : parseInt($("[href]").val()),
            cols: [[
                { filed: 'SD_LAYER_ID', checkbox: true, fixed: true },
                { field: 'ORDER_NO', title: '序号', width: 50, align: 'center', fixed: true },
                { field: 'SD_LAYER_CODE', title: '层级编码', width: 120, sort: true, fixed: true },
                { field: 'SD_LAYER_NAME', title: '层级名称', width: 200, },
                { field: 'SD_LAYER_PARENT_NAME', title: '父级名称', width: 200, },
                { field: 'VALID_FLAG', title: '有效标志', width: 150, align: 'center', sort: true, toolbar: '#VALID_FLAG' },
                { field: 'IS_EXECUTED', title: '状态', width: 100, align: 'center', toolbar: '#IS_EXECUTED' },
                { field: 'CPAT_COUNT', title: '人数', width: 100, align: 'center' },
                { field: 'UPD_DATE', title: '最后操作时间', width: 160, align: 'center' },
                { field: 'UPD_USER', title: '最后操作人', width: 100, align: 'center' },
                { fixed: 'right', title: '操作', width: 140, align: 'center', toolbar: '#barDemo' }
            ]],
            done: function (res, curr, count) {
                currentPage = curr;
                totalCount = count;
            }
        });
    }

    //搜索关键词
    function btn_searchKeyWord() {
        table.reload('grid', {
            where: {
                keyWord: $("#keyWord").val() + "#" + $("#IS_EXECUTED_STATE").val()
            },
            curr: 1
        });
    }
    //添加
    function btn_add() {
        $.layerOpen({
            id: "add",
            title: "新增层级",
            width: "670px",
            height: "490px",
            content: "/TestCenterSystem/LayerInfo/Form",
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }
    //编辑
    function btn_edit(id) {
        $.layerOpen({
            id: "edit",
            title: "修改层级",
            width: "670px",
            height: "490px",
            content: "/TestCenterSystem/LayerInfo/Form?primaryKey=" + id,
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }
    //查看
    function btn_detail(id) {
        $.layerOpen({
            id: "detail",
            title: "查看层级",
            width: "670px",
            height: "490px",
            content: "/TestCenterSystem/LayerInfo/Form?primaryKey=" + id,
            btn: null
        });
    }
    //删除
    function btn_delete(id) {
        $.layerConfirm({
            content: "确定删除吗？",
            callback: function () {
                $.formSubmit({
                    url: "/TestCenterSystem/LayerInfo/Delete?primaryKey=" + id,
                    success: function () {
                        initGrid()
                    }
                });
            }
        });
    }
    //编辑公式
    function btn_configure(id, code, name) {
        console.log(id + "-" + code + "-" + name)
        $.layerOpen({
            id: "configure",
            title: "编码：" + code + " 名称：" + name,
            width: "1000px",
            height: "618px",
            content: "/TestCenterSystem/LayerInfo/Configure?primaryKey=" + id,
            close: false,
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
            }
        });

    }

    //批量执行
    function btn_excute_all() {
        var checkStatus = table.checkStatus('grid'); //test即为基础参数id对应的值
        var kpiString = ""
        for (var k = 0; k < checkStatus.data.length; k++) {
            kpiString += checkStatus.data[k].SD_EKPI_ID + "|"
        }
        kpiString.trim('#')
        console.log(kpiString)
        $.layerOpen({
            id: "edit",
            title: "批量执行",
            width: "970px",
            height: "630px",
            content: "/TestCenterSystem/LayerInfo/ExcuteAll?clientKey=" + $.cookie("kpi_client_key") + "&kpiArray=" + kpiString,
            btn: null,
        });
    }
    //批量锁定
    function btn_lock_all() {
        var checkStatus = table.checkStatus('grid');
        var kpiString = ""
        for (var k = 0; k < checkStatus.data.length; k++) {
            kpiString += checkStatus.data[k].SD_EKPI_ID + "|"
        }
        kpiString.trim('#')
        console.log(kpiString)
        $.layerOpen({
            id: "edit",
            title: "批量锁定",
            width: "970px",
            height: "630px",
            content: "/TestCenterSystem/LayerInfo/LockAll?clientKey=" + $.cookie("kpi_client_key") + "&kpiArray=" + kpiString,
            btn: null,
        });
    }


</script>