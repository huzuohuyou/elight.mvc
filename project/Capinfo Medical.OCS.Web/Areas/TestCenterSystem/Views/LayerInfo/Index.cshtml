<script type="text/html" id="IS_EXECUTED">
    {{# if(d.IS_EXECUTED==1){ }}未执行
    {{# }else if(d.IS_EXECUTED==2){ }}已执行
    @*{{# }else if(d.IS_EXECUTED==5){ }}可执行*@
    {{# }else if(d.IS_EXECUTED==3){ }}已清空
    {{# }else if(d.IS_EXECUTED==4){ }}已锁定
    {{# }else{ }}[未指定]
    {{# } }}
