                                        tdBodys += `<td>${opt.xAxis[0].data[i]}</td>`;
                                        for (var j = 0; j < series.length; j++) {
                                            tdBodys += `<td>${series[j].data[i]}</td>`;
                                        }
                                        table += `<tr>${tdBodys}</tr>`;
                                        tdBodys = '';
                                    }
                                    table += '</tbody></table>';
                                    return table;
                                }
                            },
                            magicType: {
                                type: ['pie', 'funnel']
                            },
                            restore: { show: false },
                            saveAsImage: { show: true }
                        }
                    },
                    grid: {
                        left: '3%',
                        right: '4%',
                        bottom: '3%',
                        containLabel: true
                    },
                    xAxis: {
                        type: 'category',
                        name: '成员',
                        //boundaryGap: false,
                        data: obj.users,
                        axisTick: {
                            alignWithLabel: true
                        }
                    },
                    yAxis: {
                        type: 'value',
                        name: '总用时（天）',
                        axisLabel: {
                            formatter: '{value}'
                        }
                    },
                    series: [
                        {
                            name: '总用时（天）',
                            type: 'bar',
                            barWidth: '30%',
                            data: obj.datas//[10, 52, 200, 334, 390, 330, 220]
                        }
                    ]
                };
                myChart.setOption(option);
            }
        });
    }

